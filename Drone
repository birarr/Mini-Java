public class Drone {
	int x() {
		return this.x;

}
	int y() {
		return this.y;
	}
	
	public void move(int x, int y) {
		this.x = x;
		this.y = y;
	}
	
	public void setX(int x) {
	this.x = x;
	}
	
	public void setY(int y) {
		this.y = y;
		}
	
	/** Resizes the rectange's dimensions in a 2d enviroment 
	* @param w the rectangle's width
	* @param h the rectangle's height
	*/
	
	public void resize (int width, int height) {
		this.width = width;
		this.height = height;
	}
	
	public int width() {
		return this.width;
		
	}
	
	public int height() {
		return this.height;
	}
	
	private int x;
	private int y;
	private int width;
	private int height;
	
}